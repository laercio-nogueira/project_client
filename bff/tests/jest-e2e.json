{
  "moduleFileExtensions": [
    "ts",
    "json",
    "js"
  ],
  "rootDir": "../",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testRegex": ".e2e-spec.ts$",
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/src/$1",
    "@infrastructure/(.*)": "<rootDir>/src/infrastructure/$1",
    "@application/(.*)": "<rootDir>/src/application/$1",
    "@domain/(.*)": "<rootDir>/src/domain/$1"
  }
}